body 
    font-family: 'Trebuchet MS','Lucida Grande',Kalimati


h1, h2
    border: 1px solid #4297d7
    border-radius: 10px
    background: #2191c0
    padding-left: .5em
    margin: .5em
    color: black
    font-size:1.35em

h2
    padding-left: .8em
    font-size:1.2em
    color: white


ul
    list-style-type: none
    padding: 0
    margin-left: 0

ul li
    font-size:1em
    border:1px solid blue
    margin: .15em
    border-radius:.5em
    text-align:center

ul li.localParticipant
    color: black


ul li:hover, ul li:focus, ul li:active
  opacity:.5

#listenerList li
  background:red
#waitingList li
  background:orange
#speakerList li
  background:green

#buttons
    margin-left:auto;
    margin-right:auto;
    width:70%;


input[type='button']  {
    font-size:0.8em
	color: #123d54;
	padding: 3px 5px;
	background: -moz-linear-gradient(
		top,
		#afd9fa 0%,
		#588fad);
	background: -webkit-gradient(
		linear, left top, left bottom,
		from(#afd9fa),
		to(#588fad));
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	border-radius: 6px;
	border: 1px solid #003366;
	-moz-box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 1px rgba(255,255,255,1);
	-webkit-box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 1px rgba(255,255,255,1);
	box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 1px rgba(255,255,255,1);
	text-shadow:
		0px -1px 0px rgba(000,000,000,0.7),
		0px 1px 0px rgba(255,255,255,0.3);
}