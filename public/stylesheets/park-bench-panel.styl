body 
    font-size:100%
    font-family: 'Trebuchet MS'


h1  
    border: 1px solid #4297d7
    border-radius: 10px
    background: #2191c0
    padding-left: .5em
    margin: .5em
    color: white
    font-size:1.5em


ul
    list-style-type:none


ul li
    border:1px solid blue
    margin:.2em .2em
    border-radius:.5em
    text-align:center
    width: 90%


ul li.localParticipant
    color: black


ul li:hover, ul li:focus, ul li:active
  opacity:.5

#listenerList li
  background:red
#waitingList li
  background:orange
#speakerList li
  background:green

#buttons
    margin-left:auto;
    margin-right:auto;
    width:70%;


input[type='button']  {
    font-size:0.9em
	color: #123d54;
	padding: 5px 10px;
	background: -moz-linear-gradient(
		top,
		#afd9fa 0%,
		#588fad);
	background: -webkit-gradient(
		linear, left top, left bottom,
		from(#afd9fa),
		to(#588fad));
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	border-radius: 6px;
	border: 1px solid #003366;
	-moz-box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 1px rgba(255,255,255,1);
	-webkit-box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 1px rgba(255,255,255,1);
	box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 1px rgba(255,255,255,1);
	text-shadow:
		0px -1px 0px rgba(000,000,000,0.7),
		0px 1px 0px rgba(255,255,255,0.3);
}