doctype 5
head
  title Park Bench Panel

  link(rel='stylesheet', type='text/css', href='https://ajax.googleapis.com/ajax/libs/jqueryui/1.9.0/themes/start/jquery-ui.css')
  link(rel='stylesheet', type='text/css', href='#{url}/../stylesheets/park-bench-panel.css')
  //The hangout ref needs to change to this once it moves out
  //of developer sandbox <script src="//talkgadget.google.com/hangouts/_/api/hangout.js?v=1.2"></script>

  block scripts
    script(type='text/javascript')
      var SPEAKER_QUEUE_SIZE = #{speakerQueueSize};
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js')
    script(src='#{url}/../javascripts/renderer.js')
    script(src='#{url}/../javascripts/participant.js')
    script(src='#{url}/../javascripts/participantMapper.js')
    script(src='#{url}/../javascripts/hangoutWrapper.js')
    script(src='#{url}/../javascripts/park-bench-panel.js')

  block initScripts
    script(src='#{url}/../javascripts/park-bench-panel-init.js')


block body
  body
    div(width='75%')
      h1 Park Bench Panel
        input#btnHelp.button(type='image', src="#{url}/../Icons/question.png", title="Click for help", alt="help", height="32", onclick='$("#helpDialog").dialog("open");')
        include help
      h2 Listeners
        ul#listenerList.participantList
      h2 Waiting to speak
        ul#waitingList.participantList
      h2 Speakers
        ul#speakerList.participantList
      #buttons
        input#btnStartTalk.button(type='button', value='Talk', onclick='pbp.startTalking()')
        input#btnStopTalk.button(type='button', value='Done talking', onclick='pbp.stopTalking()')


